<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- 콘솔에 찍을 로그 -->
        <encoder>
            <charset>UTF-8</charset>
            <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%15thread] %-40.40logger{40}: %-4line - %msg %n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
